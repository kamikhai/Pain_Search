<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MyDialogStyle1" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/light_blue</item>
    </style>

    <style name="MyDialogStyle2" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/colorActivityTwo</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">

        <item name="colorControlNormal">@color/black_overlay</item>
        <item name="colorControlActivated">@color/colorActivityTwo</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="colorPrimaryDark">@color/colorActivityTwo</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppRed" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/colorActivityTwo</item>
        <item name="android:colorForeground">@color/cardview_light_background</item>
        <item name="android:textColorPrimary">@color/cardview_light_background</item>
        <item name="colorPrimaryDark">@color/colorActivityTwo</item>
        <item name="android:colorBackground">@android:color/background_light</item>
    </style>

    <style name="Theme_to_index" parent="Theme.Design.NoActionBar" >
        <item name="colorPrimaryDark">@color/primary_dark_material_dark_1</item>
    </style>

    <style name="Profile" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_two</item>
    </style>

    <style name="Setting" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/st_br_settings</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
    </style>

    <style name="Connect" parent="AppRed" >
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
    </style>

</resources>