<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/statusbar</item>
        <item name="android:navigationBarColor">@color/darkblue</item>
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="colorPrimaryDark">@color/colorActivityTwo</item>
    </style>

    <style name="AppRed" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorActivityTwo</item>
        <item name="android:colorForeground">@color/cardview_light_background</item>
        <item name="android:textColorPrimary">@color/cardview_light_background</item>
        <item name="android:statusBarColor">@color/statusbar</item>
        <item name="colorPrimaryDark">@color/colorActivityTwo</item>
        <item name="android:colorBackground">@android:color/background_light</item>
    </style>

    <style name="Theme_to_index" parent="Theme.Design.NoActionBar">
        <item name="colorPrimaryDark">@color/primary_dark_material_dark_1</item>
        <item name="android:statusBarColor">@color/statusbar</item>
        <item name="android:navigationBarColor">@color/darkblue</item>
    </style>

    <style name="Profile" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_two</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="Settings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/st_br_settings</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="android:statusBarColor">@color/st_br_settings</item>
        <item name="android:textColorSecondaryInverse">@color/cardview_dark_background</item>
    </style>

    <style name="Connect" parent="AppRed">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="android:statusBarColor">?attr/actionModeSplitBackground</item>
    </style>
</resources>
